<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">    
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <title>CRUD</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">        
    <nav class="navbar navbar-dark">      
      </nav> 
      <div class="d-flex justify-content-center"> 
          <button class="btn btn-primary btn-plus " type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span> 
          </button>
        </div> 
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/">Inicio</a>
              </li>                             
            </ul>            
          </div>
        </div>
      </nav>
      <div  eblclass="container">    
        <a href="/create" class="btn btn-outline-primary mt-4 d-flex justify-content-center font-weight-bold text-primary"><i class='bx bxs-plus-circle bx-md'></i>agregar nuevo producto</a>    
        <table class="table bg-dark">
          <thead class="thead-dark">
          <tr class="bg-secondary text-dark">
            <th scope="col">ID</th>
            <th scope="col">NOMBRE</th>
            <th scope="col">MARCA</th>            
            <th scope="col">PRECIO</th>
            <th scope="col">CANTIDAD</th>
            <th scope="col">ACCIONES</th>               
          </tr>
        </thead>
        <tbody>
          <% results.forEach((prod)=>{ %>
            <tr class="text-white">  
                <td><%= prod.id %></td>  
                <td><%= prod.nombre %></td>
                <td><%= prod.marca %></td>
                <td><%= prod.precio %></td>
                <td><%= prod.cantidad %></td>
                <td>
                  <a href="/edit/<%= prod.id %>" class="btn btn-outline-info"><i class='bx bxs-edit'></i></a>
                  <a href="/delete/<%= prod.id %>" class="btn btn-outline-danger"><i class='bx bxs-trash-alt'></i></a>                   
                </td>
            </tr>                                   
         <% }) %>
        </tbody>
      </table>
      </div>
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>    
</body>
</html>